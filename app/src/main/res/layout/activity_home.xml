<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F4FA"
    android:id="@+id/main">

        <!-- Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng trở lại"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Balance Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="Profile image"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_account_circle"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAccountType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="14sp"
                            android:textColor="#777"/>

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*** *** VND"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000080"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons (like Transfer, QR, Top-up) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginHorizontal="16dp">

                <Button
                    android:id="@+id/btnTransfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chuyển tiền"
                    android:backgroundTint="#007BFF"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnQR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quét QR"
                    android:backgroundTint="#007BFF"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/btnTopUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nạp tiền"
                    android:backgroundTint="#007BFF"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/btnExplore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khám phá"
                    android:backgroundTint="#007BFF"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Feature Section (like shopping, entertainment, investment) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua sắm - Giải trí - Đầu tư"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:weightSum="4">

                <!-- Sample Feature Buttons -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="Vé số"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="Data 4G"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="BĐS"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="Game 365"
                    android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Bottom Navigation (sample) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="#148C281D"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

                <Button
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="#15274B"
                    android:text="Trang chủ"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#007BFF"
                    android:text="Thẻ"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="#007BFF"
                    android:text="Thanh toán"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="71dp"
                    android:layout_height="61dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#007BFF"
                    android:text="Ưu đãi"
                    android:textColor="#FFFFFF" />
        </LinearLayout>
</LinearLayout>
